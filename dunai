mixed-port: 7897
allow-lan: true   # Windows 本机一般也可以设为 false 更安全；若要局域网设备连接则保持 true
mode: rule
log-level: info

unified-delay: true
tcp-concurrent: true
find-process-mode: strict
global-client-fingerprint: chrome

# NTP（可选）
ntp:
  enable: true
  write-to-system: false
  server: time.apple.com
  port: 123
  interval: 30

# 域名嗅探（可选）
sniffer:
  enable: true
  sniff:
    TLS:
      ports: [443, 8443]
    HTTP:
      ports: [80, 8080-8880]
  override-destination: true

dns:
  enable: true
  cache-algorithm: arc

  # Windows 上 53 端口可能被占用/需要管理员权限；用 1053 更稳
  listen: 127.0.0.1:1053

  enhanced-mode: fake-ip
  fake-ip-range: 198.18.0.1/16
  fake-ip-filter-mode: blacklist
  prefer-h3: false
  ipv6: false

  respect-rules: true
  use-hosts: false
  use-system-hosts: false

  fake-ip-filter:
    - "+.lan"
    - "+.local"
    - "+.arpa"
    - "localhost.ptlogin2.qq.com"
    - "localhost.work.weixin.qq.com"
    - "+.msftncsi.com"
    - "+.msftconnecttest.com"
    - "WORKGROUP"
    - "time.*.com"
    - "ntp.*.com"

  # 用于解析 “DNS 服务器域名本身”
  default-nameserver:
    - 223.5.5.5
    - 119.29.29.29
    - 114.114.114.114

  # 主用（国内 DoH）
  nameserver:
    - https://doh.pub/dns-query
    - https://dns.alidns.com/dns-query

  # 代理链路中用来解析的 DNS，避免“鸡生蛋”
  proxy-server-nameserver:
    - https://doh.pub/dns-query
    - https://dns.alidns.com/dns-query

  # 海外备用（配合 fallback-filter 才有意义）
  fallback:
    - "tls://8.8.8.8"
    - "tls://1.1.1.1"

  fallback-filter:
    geoip: true
    geoip-code: CN
    geosite:
      - gfw
    ipcidr:
      - 240.0.0.0/4
    domain:
      - "+.google.com"
      - "+.facebook.com"
      - "+.youtube.com"

  # 分开解析：CN/私有 → 国内 DNS；非CN → 海外 DoT
  nameserver-policy:
    "geosite:cn,private":
      - https://doh.pub/dns-query
      - https://dns.alidns.com/dns-query
    "geosite:!cn,!private":
      - "tls://dns.google"
      - "tls://cloudflare-dns.com"

